<div modal="shouldBeOpen['generalSettings']" close="close()" options="modalOptions" id="profileGeneralSettings" >
	<div class="modal-header">
		<h1>{{currentProfile.Name}} - Profile General Settings</h1>
	</div>

	<div class="modal-body">
        <div>
            <ul data-role="listview" data-inset="true">
                <li>
                    <label for="profileNameInput">
                        Name
                    </label>
                    <input id="profileNameInput" ng-model="currentProfile.Name" type="text">
                </li>
            
                <li>
                    <label for="profileDescription">
                        Description
                    </label>
                    <textarea id="profileDescription" ng-model="currentProfile.Description"  ></textarea>
            
                </li>
            
                <li>
                    <label for="profileFrameRateLimiter">
                        Frame Rate Limit
                    </label>
                    <input id="profileFrameRateLimiter" type="number"
                        ng-model="currentProfile.FrameRateLimiter" min="0" max="100"
                        data-highlight="false" data-theme="b">
                </li>
            </ul>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-success save" ng-click="updateProfileGeneralSettings()">Save</button>
        <button class="btn btn-warning cancel" ng-click="close()">Close</button>
    </div>
</div>