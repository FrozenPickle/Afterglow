<!-- Start of Change Light Setup Plugin -->
<div modal="shouldBeOpen['lightSetup']" close="close()" options="modalOptions" id="changeLightSetupPluginOnProfile">
	<div class="modal-header">
		<h1>Light Setup Plugins</h1>
	</div>

	<div class="modal-body">
        <ul data-role="listview">
            <!--<li><button onclick="alert('bo');" data-theme="e" data-icon="plus" data-mini="true" data-inline="true" >Add</button></li>-->
            <li ng-repeat="plugin in afterglowSetup.Setup.ConfiguredLightSetupPlugins" data-refresh-list>
            <a ng-click="updateProfile(plugin)" href="#mainContent" data-rel="back">{{plugin.Name + " - " + plugin.DisplayName}}</a></li>
        </ul>
	</div>
    <div class="modal-footer">
        <button class="btn btn-warning cancel" ng-click="close()">Close</button>
    </div>
</div>

    
